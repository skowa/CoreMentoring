@model IEnumerable<Northwind.Web.Models.CategoryModel>

@{
    ViewData["Title"] = "Categories Page";
}

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(_ => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.Description)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>